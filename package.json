{
  "name": "Openrunner",
  "version": "2.0.0",
  "description": "Computest Openrunner: Benchmark and functional testing for frontend-heavy web applications",
  "main": "index.js",
  "scripts": {
    "build:sources": "node bin/build-sources.js --output build",
    "build:profile": "node bin/build-firefox-profile --input build --output PRIV/profile",
    "build": "npm run build:sources && npm run build:profile",
    "lint": "eslint bin core lib runner-modules test",
    "test:unit": "mocha",
    "test:unit:coverage": "istanbul cover --include-all-sources node_modules/mocha/bin/_mocha",
    "test:unit:coveralls": "istanbul cover --include-all-sources node_modules/mocha/bin/_mocha test --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "test": "npm run lint && npm run test:unit:coverage",
    "start": "npm run build && \"$FIREFOX_BIN\" --no-remote --profile PRIV/profile --jsconsole"
  },
  "author": "Joris van der Wel <joris@jorisvanderwel.com>",
  "license": "Apache-2.0",
  "files": [
    "bin",
    "building",
    "core",
    "icons",
    "lib",
    "runner-modules",
    "manifest.json",
    "index.js"
  ],
  "bin": {
    "openrunner-build-sources": "./bin/build-sources.js",
    "openrunner-build-firefox-profile": "./bin/build-firefox-profile.js"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "clone": "^2.1.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.2.0",
    "eslint-plugin-import": "^2.7.0",
    "express": "^4.16.2",
    "istanbul": "^1.1.0-alpha.1",
    "mime": "^2.0.3",
    "mocha": "^4.0.1",
    "mocha-sugar-free": "^1.3.1",
    "morgan": "^1.9.0",
    "serve-index": "^1.9.1",
    "sinon": "^4.0.1",
    "throttle": "^1.0.3"
  },
  "dependencies": {
    "archiver": "^2.1.0",
    "bluebird": "^3.5.0",
    "bluefox": "^2.0.0",
    "brace": "^0.10.0",
    "browserify": "^14.4.0",
    "chai": "^4.1.2",
    "chai-arrays": "^2.0.0",
    "chai-dom": "^1.5.0",
    "chai-subset": "^1.6.0",
    "cjson": "^0.5.0",
    "error-stack-parser": "^2.0.1",
    "fs-extra": "^4.0.1",
    "jsonbird": "^3.0.0",
    "performr-runner-metadata-parser": "^1.0.0",
    "performr-runner-result-graph": "^4.0.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "robust-websocket": "^0.3.0",
    "shortid": "^2.2.8",
    "split": "^1.0.1",
    "ws": "^3.2.0",
    "yargs": "^10.0.3"
  }
}
